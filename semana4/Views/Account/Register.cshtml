@using semana4.ViewModels;
@model RegisterVM

@{
  
}
<html>
<head>
    <link rel="stylesheet" href="~/css/StyleSheetRegistro.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <div class="row d-flex align-items-center justify-content-center">
        <div class="wrapper">
            <form asp-action="Register" method="post" asp-route-returnurl="@ViewData["ReturnUrl"]">
                <h2 class="form-login">Registrarse</h2>
                <div asp-validation-summary="ModelOnly" class="validation-message"></div>
                <div class="mb-1">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="validation-message"></span>
                </div>
                <div class="mb-1">
                    <label asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="validation-message"></span>
                </div>
                <div class="mb-1">
                    <label asp-for="Password" class="control-label"></label>
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="validation-message"></span>
                </div>
                <div class="mb-1">
                    <label asp-for="ConfirmPassword" class="control-label"></label>
                    <input asp-for="ConfirmPassword" class="form-control" />
                    <span asp-validation-for="ConfirmPassword" class="validation-message"></span>
                </div>
                <div class="row-2">
                    <div class="col-8">
                        <a asp-action="Login" asp-route-returnurl="@ViewData["ReturnUrl"]" class="text-decoration-underline float-start mt-2">Tenes cuenta?</a>
                    </div>
                    <div class="col-4">
                        <button class="btn btn-primary" type="submit" value="Register">Registrarse</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</body>
</html>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}