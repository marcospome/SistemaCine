@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <style>
        /* Reset de Estilos */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        /* Estilos Globales */
        body {
            font-family: Arial, sans-serif;
            background-color: #000;
            color: white;
            text-align: center;
            margin: 0;
            padding: 0;
        }

        .container {
            max-width: 1200px;
            padding: 0 20px;
            text-align: center;
        }


        .image-container {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-top: 20px;
            width: 100%;
            max-width: 1200px;
        }

            .image-container img {
                width: calc(33.33% - 10px);
                height: auto;
                margin-right: 5px;
                box-shadow: 0px 5px 15px rgba(255, 255, 255, 0.5);
            }

                .image-container img:last-child {
                    margin-right: 0;
                }
    </style>
</head>
<body>
    <div class="image-container">
        <img src="~/Images/feat1.png" alt="Imagen 1">
        <img src="~/Images/feat2.png" alt="Imagen 2">
        <img src="~/Images/feat3.png" alt="Imagen 3">
    </div>
</body>
</html>
