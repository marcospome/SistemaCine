@model IEnumerable<semana4.ViewModels.FuncionViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Funcion.Dia)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Funcion.Horario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Funcion.Lenguaje)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PeliculaTitulo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Funcion.Dia)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Funcion.Horario)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Funcion.Lenguaje)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PeliculaTitulo)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Funcion.IdFuncion">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Funcion.IdFuncion">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Funcion.IdFuncion">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
